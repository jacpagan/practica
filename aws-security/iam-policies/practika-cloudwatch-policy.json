{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "PractikaCloudWatchLogs",
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents",
                "logs:DescribeLogStreams",
                "logs:DescribeLogGroups"
            ],
            "Resource": [
                "arn:aws:logs:*:*:log-group:/aws/ecs/practika/*",
                "arn:aws:logs:*:*:log-group:/practika/*"
            ]
        },
        {
            "Sid": "PractikaCloudWatchMetrics",
            "Effect": "Allow",
            "Action": [
                "cloudwatch:PutMetricData"
            ],
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "cloudwatch:namespace": "Practika/Application"
                }
            }
        }
    ]
}
