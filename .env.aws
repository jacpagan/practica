# AWS Environment Configuration Template for Practika Django App
# Copy this file to .env.aws and fill in your values

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Django Configuration
DJANGO_ENVIRONMENT=production
DJANGO_DEBUG=False
DJANGO_SECRET_KEY=your_django_secret_key_here
DJANGO_ALLOWED_HOSTS=yourdomain.com,*.yourdomain.com

# Database Configuration (RDS)
DB_NAME=practika
DB_USER=practika_admin
DB_PASSWORD=your_secure_database_password
DB_HOST=your_rds_endpoint.amazonaws.com
DB_PORT=5432

# S3 Configuration
USE_S3=True
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.cloudfront.net

# CloudFront CDN (Optional)
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net
AWS_CLOUDFRONT_DISTRIBUTION_ID=your_cloudfront_distribution_id

# AWS SES Email (Optional)
AWS_SES_REGION_NAME=us-east-1
AWS_SES_ACCESS_KEY_ID=your_ses_access_key_id
AWS_SES_SECRET_ACCESS_KEY=your_ses_secret_access_key

# Redis Configuration (ElastiCache - Optional)
REDIS_URL=redis://your_redis_endpoint:6379/0

# ECS Configuration
ECS_DESIRED_COUNT=2
ECS_MIN_COUNT=1
ECS_MAX_COUNT=4

# Load Balancer Configuration
ALB_DNS_NAME=your-alb-dns-name.us-east-1.elb.amazonaws.com
DOMAIN_NAME=yourdomain.com

# AWS X-Ray Tracing (Optional)
AWS_XRAY_DAEMON_ADDRESS=127.0.0.1:2000

# File Upload Settings
MAX_UPLOAD_SIZE=104857600
UPLOAD_RATE_LIMIT=10/minute

# Security Settings
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Monitoring and Logging
LOG_LEVEL=INFO
HEALTH_CHECK_ENABLED=True

