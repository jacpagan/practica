# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=False

# Database (Heroku will set DATABASE_URL automatically)
# DATABASE_URL=postgres://user:pass@host:port/dbname

# Redis (Heroku will set REDIS_URL automatically)
# REDIS_URL=redis://user:pass@host:port/db

# AWS S3 Storage Configuration (Required for video uploads on Heroku)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Optional: Custom S3 domain (if using CloudFront)
# AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.com
