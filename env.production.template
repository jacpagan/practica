# Production Environment Variables for Practika
# Copy this file to .env.production and fill in the values

# Django Settings
DJANGO_ENVIRONMENT=production
DJANGO_SECRET_KEY=your-super-secret-key-here-change-this
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=your-domain.com,your-aws-alb-domain.amazonaws.com

# Database (AWS RDS will provide DATABASE_URL)
# DATABASE_URL=postgresql://user:password@host:port/database

# CORS Settings
DJANGO_CORS_ALLOWED_ORIGINS=https://your-domain.com,https://your-aws-alb-domain.amazonaws.com

# File Upload Settings
DJANGO_FILE_UPLOAD_MAX_MEMORY_SIZE=104857600
DJANGO_DATA_UPLOAD_MAX_MEMORY_SIZE=104857600

# Performance Settings
DJANGO_CONN_MAX_AGE=600
DJANGO_OPTIONS_MAX_CONNS=20

# Logging
DJANGO_LOG_LEVEL=INFO

# Optional: S3 Storage (if you want to use S3)
# USE_S3=False
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
